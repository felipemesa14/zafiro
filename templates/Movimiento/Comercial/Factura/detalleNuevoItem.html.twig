{% extends 'base.html.twig' %}
{% block title %}Buscar item - Zafiro 360{% endblock %}
{% block content %}
    <div class="row">
        <div class="cl-mcont">
            {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}
            <div class="block-flat">
                <div class="header">
                    <h4>Filtros de busqueda</h4>
                </div>
                <div class="content">
                    <div class="form-group row">
                        {{ form_label(form.nombre) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.nombre, { 'attr': {'class': 'input-sm'} }) }}
                            <div class="text-error">{{ form_errors(form.nombre) }}</div>
                        </div>
                        {{ form_label(form.referencia) }}
                        <div class="col-sm-4">
                            {{ form_widget(form.referencia, { 'attr': {'class': 'input-sm'} }) }}
                            <div class="text-error">{{ form_errors(form.referencia) }}</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                            {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-flat">
                <!-- aqui va el contenido del front end -->
                <div class="tab-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#items" data-toggle="tab">Item</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active cont" id="items">
                            <div class="row table-responsive">
                                <table class="table-bordered table-responsive table-hover table-condensed blue">
                                    <thead>
                                    <tr>
                                        <th><strong>ID</strong></th>
                                        <th><strong>NOMBRE</strong></th>
                                        <th><strong>REF</strong></th>
                                        <th><strong>PRECIO</strong></th>
                                        <th><strong>%DESC</strong></th>
                                        <th><strong>%IVA</strong></th>
                                        <th><strong>CANTIDAD</strong></th>
                                        <th class="text-center"><input type="checkbox"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for arItem in arItems %}
                                        <tr>
                                            <td>{{ arItem.codigoItemPk }}</td>
                                            <td>{{ arItem.nombre }}</td>
                                            <td>{{ arItem.referencia }}</td>
                                            <td style="text-align: center"><input class="input-grid" type="number"
                                                                                  name="TxtPrecio{{ arItem.codigoItemPk }}"
                                                                                  value="{{ arItem.vrPrecio }}"
                                                                                  size="5"
                                                                                  style="width:120px; text-align: right"/>
                                            </td>
                                            <td style="text-align: center"><input class="input-grid" type="number"
                                                                                  name="TxtDescuento{{ arItem.codigoItemPk }}"
                                                                                  value=0
                                                                                  size="5"
                                                                                  style="width:120px; text-align: right"/>
                                            </td>
                                            <td style="text-align: center"><input class="input-grid" type="number"
                                                                                  name="TxtPorcentaje{{ arItem.codigoItemPk }}"
                                                                                  value="{{ arItem.porcentaje }}"
                                                                                  size="5"
                                                                                  style="width:120px; text-align: right"/>
                                            </td>
                                            <td style="text-align: center"><input class="input-grid" type="number"
                                                                                  name="TxtCantidad{{ arItem.codigoItemPk }}"
                                                                                  value=1 size="5"
                                                                                  style="width:120px; text-align: right"/>
                                            </td>
                                            <td class="text-center"><input type="checkbox" name="ChkSeleccionar[]"
                                                                           value="{{ arItem.codigoItemPk }}">
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="btn-toolbar" style="float: right">
                <div class="btn-group">
                    {{ form_widget(form.BtnGuardar,{ 'attr': {'class': 'btn btn-info btn-sm'} }) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}