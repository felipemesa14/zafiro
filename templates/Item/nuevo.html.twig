{% extends 'base2.html.twig' %}
{% block content %}
    <div class="row">
        <div class="cl-mcont">
            {{ form_start(form) }}
            <div class="block-flat">
                <!-- aqui va el contenido del front end -->
                <div class="form-group row">
                    {{ form_label(form.nombre) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.nombre) }}
                        <div class="text-error">{{ form_errors(form.nombre) }}</div>
                    </div>
                    {{ form_label(form.referencia) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.referencia) }}
                        <div class="text-error">{{ form_errors(form.referencia) }}</div>
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.vrPrecio) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.vrPrecio) }}
                        <div class="text-error">{{ form_errors(form.vrPrecio) }}</div>
                    </div>
                    {{ form_label(form.porcentaje) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.porcentaje) }}
                        <div class="text-error">{{ form_errors(form.porcentaje) }}</div>
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.urlImagen) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.urlImagen) }}
                        <div class="text-error">{{ form_errors(form.urlImagen) }}</div>
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.descripcion) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.descripcion) }}
                        <div class="text-error">{{ form_errors(form.descripcion) }}</div>
                    </div>
                </div>
            </div>
            <div class="btn-toolbar" style="float: right">
                <div class="btn-group">
                    <a class="btn btn-default btn-sm" href="{{ path('zaf_admin_item_lista') }}">Cancelar</a>
                </div>
                <div class="btn-group">
                    {{ form_widget(form.guardar,{ 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 
