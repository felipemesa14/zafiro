{% extends 'base2.html.twig' %}
{% block content %}
    <div class="row">
        <div class="cl-mcont">
            {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}
            <div class="block-flat">
                <div class="header">
                    <h4>Filtros de busqueda</h4>
                </div>
                <div class="content">
                    <div class="form-group row">
                        <label for="form_numero" class="col-form-label col-sm-2 form-control-label">Nombre:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.nombre, { 'attr': {'class': 'input-sm'} }) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                            {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="block-flat">
                <!-- aqui va el contenido del front end -->
                <div class="tab-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#items" data-toggle="tab">Item</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active cont" id="items">
                            <div class="row table-responsive">
                                <table class="table-bordered table-responsive table-hover table-condensed blue">
                                    <thead>
                                    <tr>
                                        <th><strong>CODIGO</strong></th>
                                        <th><strong>NOMBRE</strong></th>
                                        <th><strong>PRECIO</strong></th>
                                        <th><strong>PORCENTAJE</strong></th>
                                        <th></th>
                                        <th></th>
                                        <th class="text-center"><input type="checkbox"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for arItem in arItems %}
                                        <tr>
                                            <td>{{ arItem.codigoItemPk }}</td>
                                            <td>{{ arItem.nombre }}</td>
                                            <td>{{ arItem.vrPrecio }}</td>
                                            <td>{{ arItem.porcentaje }}%</td>
                                            <td class="text-center"><a
                                                        href="{{ path('zaf_admin_item_nuevo',{'codigoItem' : arItem.codigoItemPk}) }}"><img
                                                            src="{{ asset('images/bootstrap/glyphicons_151_edit.png') }}"
                                                            width=20 height=20 title="Editar"></a></td>
                                            <td class="text-center"><a
                                                        href="{{ path('zaf_admin_item_detalle',{'codigoItem' : arItem.codigoItemPk}) }}"><img
                                                            src="{{ asset('images/bootstrap/glyphicons_152_new_window.png') }}"
                                                            width=22 height=22 title="Detalle"></a></td>
                                            <td class="text-center"><input type="checkbox" name="ChkSeleccionar[]"
                                                                           value="{{ arItem.codigoItemPk }}">
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="btn-toolbar" style="float: right">
                <div class="btn-group">
                    <a class="btn btn-default btn-sm"
                       href="{{ path('zaf_admin_item_nuevo',{'codigoItem':0}) }}">Nuevo</a>
                </div>
                <div class="btn-group">
                    {{ form_widget(form.BtnEliminar,{ 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 
